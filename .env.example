# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database Configuration
# PostgreSQL Connection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backend_db
POSTGRES_PORT=5432
POSTGRES_URI=postgresql://postgres:postgres@localhost:5432/backend_db?schema=public

# MongoDB Connection
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin
MONGO_DATABASE=backend_events
MONGO_PORT=27017
MONGODB_URI=mongodb://admin:admin@localhost:27017/backend_events?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_REFRESH_EXPIRE=7d

# Mailjet Configuration (Email Service)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_API_SECRET=your-mailjet-api-secret
MAILJET_FROM_EMAIL=noreply@example.com
MAILJET_FROM_NAME=Backend API

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# PostHog Configuration (Analytics)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
